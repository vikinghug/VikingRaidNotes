<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
  <Script file="TitleBarTemplate.lua" />

  <Frame name="VRNTitleBarTemplate" virtual="true">
    <Size y="36" x="128" />

    <Scripts>
    </Scripts>

    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="0.117647059" g="0.0431372549" b="0.149019608" a="0.8" />
        </Texture>
      </Layer>
    </Layers>

    <Frames>
      <Button name="$parentSetsButton" inherits="VRNSetButtonTemplate" parentKey="SetButton">
        <Size x="28" y="28" />
        <Anchors>
          <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT">
            <Offset>
              <AbsDimension x="3" />
            </Offset>
          </Anchor>
        </Anchors>

        <Scripts>
          <OnClick>
            if (VRNFrameSetsList:IsShown()) then
              VRNFrameSetsList:Hide()
            else
              VRNFrameSetsList:Show()
            end

            PlaySound(856)
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parentNotesButton" inherits="VRNNotesButtonTemplate" parentKey="NotesButton">
        <Anchors>
          <Anchor point="LEFT" relativeKey="$parent.SetButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="3" />
            </Offset>
          </Anchor>
        </Anchors>

        <Scripts>
          <OnClick>
            if (VRNFrameNotesList:IsShown()) then
              VRNFrameNotesList:Hide()
            else
              VRNFrameNotesList:Show()
            end

            PlaySound(856)
          </OnClick>
        </Scripts>
      </Button>

    </Frames>
  </Frame>
</Ui>
